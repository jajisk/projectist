{% extends "base.twig" %}
{% block body %}
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                {{ lang.open_projects }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Projects</a></li>
                <li class="active">Projects List</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>{{ lang.project_code }}</th>
                                    <th>{{ lang.project_name }}</th>
                                    <th>{{ lang.project_owner }}</th>
                                    <th>{{ lang.project_portfolio }}</th>
                                    <th>{{ lang.project_rag_status }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for project in projects %}
                                        <tr>
                                            <td>{{ project.Code }}</td>
                                            <td>{{ project.Name }}</td>
                                            <td>{{ project.Owner }}</td>
                                            <td>{{ project.Portfolio }}</td>
                                            <td>{{ project.RAG_Status }}</td>
                                        </tr>
                                    {%  endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>{{ lang.project_code }}</th>
                                    <th>{{ lang.project_name }}</th>
                                    <th>{{ lang.project_owner }}</th>
                                    <th>{{ lang.project_portfolio }}</th>
                                    <th>{{ lang.project_rag_status }}</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </section><!-- /.content -->

{% endblock %}
